{"ast":null,"code":"export default {\n  name: 'App',\n\n  data() {\n    return {\n      name: '',\n      description: '',\n      image: '',\n      price: '',\n      check: false,\n      cards: []\n    };\n  },\n\n  methods: {\n    add() {\n      let newCard = {\n        name: this.name,\n        description: this.description,\n        img: this.image,\n        price: this.price\n      };\n      this.cards.push(newCard);\n    },\n\n    display() {\n      this.check = true;\n    },\n\n    none() {\n      this.check = false;\n    },\n\n    deleteCard(cardRemove) {\n      this.cards = this.cards.filter(t => t !== cardRemove);\n    }\n\n  }\n};","map":{"version":3,"mappings":"AA2CA;EACAA,WADA;;EAEAC;IACA;MACAD,QADA;MAEAE,eAFA;MAGAC,SAHA;MAIAC,SAJA;MAKAC,YALA;MAMAC;IANA;EAQA,CAXA;;EAYAC;IACAC;MACA;QACAR,eADA;QAEAE,6BAFA;QAGAO,eAHA;QAIAL;MAJA;MAMA;IACA,CATA;;IAUAM;MACA;IACA,CAZA;;IAaAC;MACA;IACA,CAfA;;IAgBAC;MACA;IACA;;EAlBA;AAZA","names":["name","data","description","image","price","check","cards","methods","add","img","display","none","deleteCard"],"sourceRoot":"src","sources":["App.vue"],"sourcesContent":["<template>\n  <div>\n    <header id=\"header\">\n      <h1 class=\"header-title\">Добавление товара</h1>\n      <div class=\"header-filter\">\n        <p class=\"header-filter-choose\">По умолчанию</p>\n      </div>\n    </header>\n\n    <div class=\"wrapper\">\n      <form action=\"#\" class=\"form\">\n        <div class=\"inputWrapper\">\n          <p>Наименование товара</p>\n          <input required v-model=\"name\" type=\"text\" aria-expanded=\"true\" class=\"form-input\" placeholder=\"Введите наименование товара\">\n          <p>Описание товара</p>\n          <textarea v-model=\"description\"  class=\"form-input form-input_height\" placeholder=\"Введите описание товара\"></textarea>\n          <p>Ссылка на изображение товара</p>\n          <input required v-model=\"image\"  type=\"text\" class=\"form-input\" placeholder=\"Введите ссылку\">\n          <p>Цена товара</p>\n          <input required v-model=\"price\"  type=\"text\" class=\"form-input\" placeholder=\"Введите цену\">\n        </div>\n        <input v-on:click=\"add()\"  type=\"submit\" class=\"form-button\" value=\"Добавить товар\">\n      </form>\n      <div class=\"card\">\n        <div v-for=\"card in cards\"  class=\"card__item\">\n          <div class=\"card__item-delete\"  @click=\"deleteCard(card)\">\n            <img src=\"./images/Delete.svg\" alt=\"Delete\">\n          </div>\n          <img src=\"./images/img.png\" alt=\"Изображение товара\">\n            <div class=\"card__item-text\">\n              <h6>{{ card.name }}</h6>\n              <p>{{card.description}}</p>\n              <h5>{{card.price}}</h5>\n            </div>\n        </div>\n      </div>\n    </div>\n\n\n  </div>\n</template>\n\n<script>\nexport default {\n  name: 'App',\n  data(){\n    return{\n      name: '',\n      description: '',\n      image: '',\n      price: '',\n      check: false,\n      cards: []\n      }\n    },\n    methods:{\n      add(){\n        let newCard = {\n          name: this.name,\n          description: this.description,\n          img: this.image,\n          price: this.price\n        }\n        this.cards.push(newCard);\n      },\n      display(){\n          this.check = true;\n      },\n      none(){\n        this.check = false;\n      },\n      deleteCard(cardRemove){\n          this.cards = this.cards.filter(t => t !== cardRemove)\n      }\n    }\n  }\n</script>\n\n<style src=\"./style.css\"></style>\n"]},"metadata":{},"sourceType":"module"}