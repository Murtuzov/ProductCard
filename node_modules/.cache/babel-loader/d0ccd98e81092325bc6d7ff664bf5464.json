{"ast":null,"code":"import { validationMixin } from 'vuelidate';\nimport { required } from 'vuelidate/lib/validators';\nexport default {\n  mixins: [validationMixin],\n\n  data() {\n    return {\n      card: {\n        name: '',\n        description: '',\n        image: '',\n        price: ''\n      }\n    };\n  },\n\n  validation: {\n    card: {\n      name: {\n        required\n      },\n      image: {\n        required\n      },\n      price: {\n        required\n      }\n    }\n  },\n  methods: {\n    add() {\n      this.card.id = Date.now();\n      this.$emit('create', this.card);\n      this.card = {\n        name: '',\n        description: '',\n        image: '',\n        price: ''\n      };\n    },\n\n    color() {\n      if (this.card.name.length && this.card.description.length && this.card.image.length && this.card.price.length) {\n        return 'colorGreen';\n      }\n    }\n\n  },\n  computed: {\n    nameErrors() {\n      const errors = [];\n      if (!this.$v.card.name.required) errors.push('Поле является обязательным');\n      return errors;\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAiBA;AACA;AAEA;EACAA,yBADA;;EAEAC;IACA;MACAC;QACAC,QADA;QAEAC,eAFA;QAGAC,SAHA;QAIAC;MAJA;IADA;EAQA,CAXA;;EAYAC;IACAL;MACAC;QAAAK;MAAA,CADA;MAEAH;QAAAG;MAAA,CAFA;MAGAF;QAAAE;MAAA;IAHA;EADA,CAZA;EAmBAC;IACAC;MACA;MACA;MACA;QACAP,QADA;QAEAC,eAFA;QAGAC,SAHA;QAIAC;MAJA;IAMA,CAVA;;IAWAK;MACA;QACA;MACA;IACA;;EAfA,CAnBA;EAoCAC;IACAC;MACA;MACA;MACA;IACA;;EALA;AApCA","names":["mixins","data","card","name","description","image","price","validation","required","methods","add","color","computed","nameErrors"],"sourceRoot":"src/components","sources":["FormCards.vue"],"sourcesContent":["<template>\n  <form action=\"#\" class=\"form\">\n    <div class=\"inputWrapper\">\n      <p class=\"form-title form-title_after\">Наименование товара</p>\n      <input required v-model=\"card.name\"  type=\"text\" aria-expanded=\"true\" class=\"form-input\" placeholder=\"Введите наименование тов