{"ast":null,"code":"import Cards from \"@/components/CardList\";\nimport FormCards from \"@/components/FormCards\";\nexport default {\n  components: {\n    Cards,\n    FormCards\n  },\n\n  data() {\n    return {\n      cards: [],\n      selectedSort: '',\n      sortOptions: [{\n        value: 'name',\n        name: 'По названию'\n      }, {\n        value: 'price',\n        name: 'По цене'\n      }]\n    };\n  },\n\n  methods: {\n    add(card) {\n      this.cards.push(card);\n    },\n\n    removeCard(card) {\n      this.cards = this.cards.filter(t => t.id !== card.id);\n    }\n\n  },\n  watch: {\n    selectedSort(NewValue) {\n      this.cards.sort((elem1, elem2) => {\n        return elem1[NewValue]?.localeCompare(elem2[NewValue]);\n      });\n    }\n\n  }\n};","map":{"version":3,"mappings":"AA4BA;AACA;AACA;EACAA;IACAC,KADA;IACAC;EADA,CADA;;EAKAC;IACA;MACAC,SADA;MAGAC,gBAHA;MAIAC,cACA;QAAAC;QAAAC;MAAA,CADA,EAEA;QAAAD;QAAAC;MAAA,CAFA;IAJA;EASA,CAfA;;EAgBAC;IACAC;MACA;IACA,CAHA;;IAIAC;MACA;IACA;;EANA,CAhBA;EAwBAC;IACAP;MACA;QACA;MACA,CAFA;IAGA;;EALA;AAxBA","names":["components","Cards","FormCards","data","cards","selectedSort","sortOptions","value","name","methods","add","removeCard","watch"],"sourceRoot":"src","sources":["App.vue"],"sourcesContent":["<template>\n  <div>\n    <header id=\"header\">\n      <h1 class=\"header-title\">Добавление товара</h1>\n      <select v-model=\"selectedSort\" class=\"header-filter\">\n        <option disabled value=\"\">Сортировать</option>\n        <option\n            v-for=\"option in sortOptions\"\n            :key=\"option.value\"\n            :value=\"option.value\"\n        >\n            {{option.name}}\n        </option>\n      </select>\n    </header>\n    <div class=\"wrapper\">\n      <form-cards\n        @create=\"add\"\n      />\n        <Cards\n            :cards=\"cards\"\n            @deleteCard=\"removeCard\"\n        />\n    </div>\n  </div>\n</template>\n\n<script>\nimport Cards from \"@/components/CardList\";\nimport FormCards from \"@/components/FormCards\";\nexport default {\n  components: {\n    Cards, FormCards,\n  },\n\n  data(){\n    return{\n      cards: [\n      ],\n      selectedSort: '',\n      sortOptions:[\n        {value: 'name', name: 'По названию'},\n        {value: 'price', name: 'По цене'},\n      ]\n      }\n    },\n    methods: {\n      add(card) {\n          this.cards.push(card)\n      },\n      removeCard(card){\n        this.cards = this.cards.filter(t => t.id !== card.id)\n      }\n    },\n    watch:{\n      selectedSort(NewValue){\n        this.cards.sort((elem1, elem2) => {\n          return elem1[NewValue]?.localeCompare(elem2[NewValue]);\n        })\n      },\n    }\n  }\n</script>\n\n<style src=\"./style.css\"></style>\n"]},"metadata":{},"sourceType":"module"}